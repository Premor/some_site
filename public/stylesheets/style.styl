/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

  p
    margin-bottom 20px
  
  .usedLogin
    font-weight bold
	
  h1
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
  a
      margin 13px 10px 4px
  
  .cardSearch .content .contentPlace
    width 554px
    height 477px
    overflow hidden
    padding-left 10px
    position absolute
    left 50%
    top 50%
    margin -245px 0 0 -282px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n+1) 
    margin-right 20px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n+2) 
    margin-right 20px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n+3)
    margin-right 20px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n),.cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n-2),.cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n-1)  
    margin-top 254px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n-1)
    margin-left -376px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n)
    margin-left -188px
  .cardSearch .content .contentPlace .contentArea .card-image-item: nth-child(6n-2)
    margin-left -564px
.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px
	input
      font-size 13px
      padding 2px 2px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px