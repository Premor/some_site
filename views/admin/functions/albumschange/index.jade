- if (!user)
    - var i = 0
    - var co = count
    .container-fluid
      .albums.no_top
        .row
          .header.col-md-12
            p Альбомы
        .row
          .sopka.sortable 
            while i < count 
              .itemSortable(id="#{i}")
                form(method = "POST" action = "/albumschange" draggable="true")
                  input(type="text" value="#{list.english[i]}" name="album_name").danone   
                  .album_form.col-md-3
                      .album_img
                        img(src="public/img/main/#{i}.png" alt="")
                      .album_name
                        input(type="submit" value="#{list.russian[i]}").dibl
                - i= i+1
    .container
      .row
        .col-md-3
        .col-md-3
        .col-md-6.download
          .mainHeader Добавление альбома
          form(action="/albumschange", method="post")
            input(type="text" required placeholder="Название альбома" name="new_album_ru").col-md-12
            input(type="text" required placeholder="Album name" name="new_album_en").col-md-12
            button(type="submit") NERVNIY TIK
          p #{engl_name}
- else
