block sidebar
	.widget
		if (user == null)
			h1 Login
			form(
				action='/login'
				method='post')
				p Login
				input(
					type='text'
					name='login[login]')
				p Password
				input(
					type='password'
					name='login[password]')
				input(
					type='submit')
			a(href = '/registration') Регистрация
		else
			p You are logged in as #{user}
			a(href='/logout') Выйти
		br
		a(href='/') На главную