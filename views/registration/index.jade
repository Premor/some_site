                      .col-md-6
                        .roboto Введите пароль:
                      .col-md-6
                        input.disb(type="password" name="passmobi" placeholder="")
                  .reg.ver.pass
                    .header.mid.col-md-12
                      .col-md-6
                        .roboto Повторите пароль:
                      .col-md-6
                        input.disb(type="password" name="ver_passmobi" placeholder="")
