extends layout
block content
    h2 Login
    if (user == null)
      if (wrong == true)
        p Неверный логин или пароль
      form(
        action='/login'
        method='post')
        p Login
        input(
          type='text'
          name='login[login]')
        p Password
        input(
          type='password'
          name='login[password]')
        input(
	      type='submit')
    else
      p You are logged in as #{user}
    a(href='/') На главную